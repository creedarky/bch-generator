.bch-pp-footer
  background-color #F7F7F7
  padding 48px 0 48px

  .bch-pp-logo-footer
    text-indent -99999px
    background-image url('images/bancoChile/logo-bch.png')
    background-repeat no-repeat
    width 200px
    height 32px

  .bch-pp-tx-bottom
    font-family 'HelveticaNeueW01-Thin',arial, helvetica
    font-size 12px
    color #4A4A4A

  .bch-pp-h-acordeon
    font-family arial, "helvetica"
    font-size 14px
    color #003772
    text-align left
    background-color #F7F7F7
    width 100%
    border-top-style none
    border-right-style none
    border-bottom-style solid
    border-left-style none
    line-height 30px
    padding 0.3em
    border-bottom-width 1px
    border-bottom-color #7B97B4
    &:focus
      outline none
  a
    color #003772
  .bch-pp-mar-top
    margin-top 1em
  .bch-pp-separador
    border-left solid 1px #003772